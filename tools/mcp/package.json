{
  "name": "slint-mcp",
  "version": "1.0.0",
  "description": "MCP server for Slint documentation search and retrieval",
  "type": "module",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "dev": "node --watch src/index.js",
    "lint": "biome lint",
    "lint:fix": "biome lint --fix",
    "format": "biome format",
    "format:fix": "biome format --write",
    "type-check": "echo 'No TypeScript type checking needed for this JS project'"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "1.18.2",
    "gray-matter": "4.0.3",
    "markdown-it": "14.1.0",
    "fuse.js": "7.1.0",
    "mime-types": "3.0.1"
  },
  "keywords": [
    "mcp",
    "slint",
    "documentation",
    "search"
  ],
  "author": "Slint Team",
  "license": "MIT"
}
